import { createServerClient } from '@supabase/ssr'
import { NextResponse } from 'next/server'
import type { NextRequest } from 'next/server'

export async function middleware(request: NextRequest) {
  console.log('='.repeat(50));
  console.log('üîµ MIDDLEWARE - Path:', request.nextUrl.pathname);
  
  let response = NextResponse.next({
    request: {
      headers: request.headers,
    },
  })

  const supabase = createServerClient(
    process.env.NEXT_PUBLIC_SUPABASE_URL!,
    process.env.NEXT_PUBLIC_SUPABASE_ANON_KEY!,
    {
      cookies: {
        get(name: string) {
          return request.cookies.get(name)?.value
        },
        set(name: string, value: string, options: any) {
          request.cookies.set({
            name,
            value,
            ...options,
          })
          response = NextResponse.next({
            request: {
              headers: request.headers,
            },
          })
          response.cookies.set({
            name,
            value,
            ...options,
          })
        },
        remove(name: string, options: any) {
          request.cookies.set({
            name,
            value: '',
            ...options,
          })
          response = NextResponse.next({
            request: {
              headers: request.headers,
            },
          })
          response.cookies.set({
            name,
            value: '',
            ...options,
          })
        },
      },
    }
  )

  const { data: { user }, error: userError } = await supabase.auth.getUser()
  
  console.log('üîµ MIDDLEWARE - User:', user?.email || 'NO USER');
  console.log('üîµ MIDDLEWARE - User ID:', user?.id || 'NO ID');
  console.log('üîµ MIDDLEWARE - Error:', userError?.message || 'No error');

  const protectedPaths = ['/dashboard', '/permit', '/profile']
  const isProtectedPath = protectedPaths.some(path => 
    request.nextUrl.pathname.startsWith(path)
  )

  console.log('üîµ MIDDLEWARE - Is protected path?', isProtectedPath);

  if (isProtectedPath) {
    if (!user) {
      console.log('‚ùå MIDDLEWARE - NO USER FOUND, redirecting to /login');
      return NextResponse.redirect(new URL('/login', request.url))
    }

    console.log('‚úÖ MIDDLEWARE - User authenticated');

    if (request.nextUrl.pathname !== '/complete-profile') {
      console.log('üîµ MIDDLEWARE - Checking profile completion...');
      
      const { data: profile, error: profileError } = await supabase
        .from('profiles')
        .select('onboarding_completed')
        .eq('id', user.id)
        .single()

      console.log('üîµ MIDDLEWARE - Profile data:', profile);
      console.log('üîµ MIDDLEWARE - Profile error:', profileError?.message || 'No error');

      if (profileError) {
        console.log('‚ùå MIDDLEWARE - Profile error, redirecting to /login');
        return NextResponse.redirect(new URL('/login', request.url))
      }

      if (!profile?.onboarding_completed) {
        console.log('‚ùå MIDDLEWARE - Profile incomplete, redirecting to /complete-profile');
        return NextResponse.redirect(new URL('/complete-profile', request.url))
      }
      
      console.log('‚úÖ MIDDLEWARE - Profile complete');
    }
  }

  if (request.nextUrl.pathname === '/complete-profile' && user) {
    const { data: profile } = await supabase
      .from('profiles')
      .select('onboarding_completed')
      .eq('id', user.id)
      .single()

    if (profile?.onboarding_completed) {
      console.log('‚úÖ MIDDLEWARE - Profile already complete, redirecting to /dashboard');
      return NextResponse.redirect(new URL('/dashboard', request.url))
    }
  }

  console.log('‚úÖ MIDDLEWARE - ALLOWING REQUEST THROUGH');
  console.log('='.repeat(50));
  return response
}

export const config = {
  matcher: [
    '/dashboard/:path*',
    '/permit/:path*',
    '/profile/:path*',
    '/complete-profile'
  ]
}